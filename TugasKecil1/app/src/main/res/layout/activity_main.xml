<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.firdaus.tugaskecil1.MainActivity">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/listView"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:layout_alignParentBottom="true"
        android:choiceMode="singleChoice"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/tombolTambah"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="add_OnClick"
        android:nestedScrollingEnabled="true"
        android:layout_alignLeft="@+id/tombolUpdate"
        android:layout_alignStart="@+id/tombolUpdate" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/tombolUpdate"
        android:layout_below="@+id/tombolTambah"
        android:layout_alignLeft="@+id/tombolHapus"
        android:layout_alignStart="@+id/tombolHapus"
        android:onClick="update_OnClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/tombolHapus"
        android:onClick="delete_OnClick"
        android:layout_below="@+id/tombolUpdate"
        android:layout_alignRight="@+id/listView"
        android:layout_alignEnd="@+id/listView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tambahTempatTF"
        android:layout_above="@+id/tombolUpdate"
        android:layout_toLeftOf="@+id/tombolTambah"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Masukkan nama tugas" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/updateTempatTF"
        android:layout_above="@+id/tombolHapus"
        android:layout_toLeftOf="@+id/tombolUpdate"
        android:text="Nama tugas"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hapusTempatTF"
        android:text="Masukkan id tugas"
        android:layout_below="@+id/updateTempatTF"
        android:layout_alignRight="@+id/updateTempatTF"
        android:layout_alignEnd="@+id/updateTempatTF"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Tempat"
        android:id="@+id/textView"
        android:layout_below="@+id/tombolHapus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/updateIDTF"
        android:layout_alignBottom="@+id/updateTempatTF"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="ID" />

</RelativeLayout>
